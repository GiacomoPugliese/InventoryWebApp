<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="css/style.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">
</head>

<body>
    <!-- Nav bar -->
<header>
    <nav>
        <div class="nav-wrapper">
            <a  href="/" class="brand-logo" style='padding-left:2%'>
                <img src="/images/logo.png" alt="Company Logo" class="responsive-img logo" style="max-width:75%">
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="/">Home</a></li>
              <li><a href="/inventory">Inventory</a></li>
            </ul>
          </div>
    </nav>
    <ul id="mobile-nav" class="sidenav">
        <li><a href="/"><i class="material-icons left">home</i> Home</a></li>
        <li><a href="/inventory"><i class="material-icons left">list</i> Inventory</a></li>
    </ul>
</header>


<!-- Actual page content! -->
<div class="container">
    <div class="section" id="list">
        <h1>Your Inventory:</h1>
        <table>
            <thead>

                <tr>
                    <th>Chemical Name</th>
                    <th>Chemical Formula</th>
                    <th>Quantity (mass/volume)</th>
                    <th>Safety Concerns</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                <% for (let i = 0; i < inventoryList.length; i++) { %>
                <tr>
                    <td><%= inventoryList[i].name %></td>
                    <td><%= inventoryList[i].empiricalFormula %></td>
                    <td><%= inventoryList[i].quantity %></td>
                    <td><%= inventoryList[i].hazardLabel %></td>
                    <td>
                        <a class="btn-small waves-effect waves-light" href="/inventory/<%= inventoryList[i].chemicalId %>">
                            <i class="material-icons right"></i>
                            Edit
                        </a>
                        <a class="btn-small waves-effect waves-light red">
                            <i class="material-icons right"></i>
                            Delete
                        </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <div class="section" id="add">
        <h2>Add a new Chemical:</h2>
        <form id="addForm">
            <div class="row">
                <div class="input-field col s6">
                    <input type="text" id="chemicalNameInput" name="chemicalName" class="validate" data-length="32" required>
                    <label for="chemicalNameInput">Chemical Name:</label>
                </div>
                <div class="input-field col s6">
                    <input type="text" id="empiricalFormulaInput" name="empiricalFormula" class="validate" data-length="32" required>
                    <label for="empiricalFormulaInput">Empirical Formula:</label>
                </div>

                <div class="input-field col s6">
                    <input type="text" id="quantityInput" name="quantity" class="validate" data-length="32" required>
                    <label for="quantityInput">Quantity (mass/volume):</label>
                </div>

                <div class="input-field col s6">
                    <select id="safetyConcernsInput" name="safetyConcerns" required>
                        <option value="" disabled selected>Choose safety concerns</option>
                        <option value="No Danger">No Danger</option>
                        <option value="Flammable">Flammable</option>
                        <option value="Corrosive">Corrosive</option>
                        <option value="Toxic">Toxic</option>
                        <option value="Reactive">Reactive</option>
                    </select>
                    <label for="safetyConcernsInput">Safety Concerns:</label>
                </div>

            </div>
            <button class="btn waves-effect waves-light" type="submit">
                <i class="material-icons right"></i>
                Submit
            </button>
        </form>
    </div>
</div>

<!-- Materialize JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
<script src="/scripts/materializeAutoInit.js"></script>

</body>
</html>

